                android:textColor="@color/colortxttel">

            </TextView>

            <TextView
                android:id="@+id/txtdyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="Deneme"

                android:textColor="@color/colortxtdyer">

            </TextView>
        </LinearLayout>


        <Button
            android:id="@+id/btnbuy"
